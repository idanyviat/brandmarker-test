{
  "name": "brandmark-test",
  "version": "1.0.0",
  "private": true,
  "description": "Тестовое задание",
  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "1.x",
    "stylelint": "^13.5.0",
    "stylelint-config-htmlacademy": "0.1.x"
  },
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"source/sass/**/*.scss\" --syntax scss",
    "test": "npm run editorconfig && npm run stylelint",
    "build": "gulp css",
    "start": "gulp start"
  },
  "browserslist": [
    "last 2 versions",
    "IE 11",
    "Firefox ESR"
  ],
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/*.html",
    "source/js/**/*.js",
    "source/img/**/*.svg",
    "source/sass/**/*.{sass,scss}"
  ],
  "engines": {
    "node": "8.16"
  },
  "dependencies": {
    "autoprefixer": "^9.8.0",
    "browser-sync": "^2.26.7",
    "editorconfig": "^0.15.3",
    "editorconfig-cli": "^0.3.0",
    "gulp": "^4.0.2",
    "gulp-cli": "^2.3.0",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^8.0.0",
    "gulp-sass": "^4.1.0",
    "gulp-sourcemaps": "^2.6.5"
  },
  "main": "gulpfile.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/idanyviat/brandmarker-test.git"
